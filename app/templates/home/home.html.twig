{# templates/home/home.html.twig #}
<h1>Your lucky number is {{ number }} !</h1>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TUSMO</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #3A7D9F;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 400px;
            background-color: #3A7D9F;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .header {
            background-color: #E74D50;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 40px;
        }

        .button {
            background-color: #FFFFFF;
            padding: 10px 20px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: none;
            font-size: 1rem;
            cursor: pointer;
            width: 100%;
            box-sizing: border-box;
        }

        .icons {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
            width: 80%;
        }

        .icon {
            width: 24px;
            height: 24px;
        }

    </style>
</head>

